RewriteEngine on
CGIPassAuth on

<Limit GET POST PUT DELETE>
order deny,allow
allow from all
</Limit>


RewriteCond $1 !^(index\.php|resources|robots\.txt|api-doc)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ api-server/$1 [L,QSA]

RewriteCond $1 !^(index\.php|resources|robots\.txt|api-doc)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule .* api-server/ [L]
